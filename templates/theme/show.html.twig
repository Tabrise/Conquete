{% extends 'base.html.twig' %}

{% block title %}Theme
{% endblock %}

{% block body %}
	<h1>Theme</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Nom</th>
				<td>{{ theme.nom }}</td>
			</tr>
			<tr>
				<th>Ordre</th>
				<td>{{ theme.ordre }}</td>
			</tr>
			<tr>
				<th>Utiliser</th>
				<td>{{ theme.utiliser ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>

	<a class="btn btn-primary" href="{{ path('app_theme_index') }}">
		Retour
	</a>

	<a class="btn btn-success" href="{{ path('app_theme_edit', {'id': theme.id}) }}">
		Editer
	</a>
	{{ include('theme/_delete_form.html.twig') }}
{% endblock %}
