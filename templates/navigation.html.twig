{% block stylesheets %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
{% endblock %}
{% block javascripts %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
{% endblock %}
{% block body %}
	<style>
		.nav-link,
		.navbar-brand {
			font: 200% Arial, sans-serif;
		}
	</style>
	<nav class="navbar navbar-expand-lg bg-body-tertiary">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{path('app_societe')}}">Conquete</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavDropdown">
				<ul class="navbar-nav">
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Prospects
						</a>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{path('app_societe')}}">Mes Prospects</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{path('app_ajout_societe')}}">Ajouter un Prospect</a>
							</li>
						</ul>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Offres
						</a>
						<ul class="dropdown-menu">
							<li>
								<a class="dropdown-item" href="{{path('app_contrat')}}">Mes Offres</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{path('app_ajout_contrat')}}">Créer une Offre</a>
							</li>
						</ul>
					</li>
					{% if is_granted('ROLE_ADMIN') %}

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Admin
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{path('app_question_index')}}">Les Questions</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{path('app_theme_index')}}">Les Thèmes</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{path('app_etat_societe_index')}}">Les États</a>
								</li>
							</ul>

						</li>
					{% endif %}

				</ul>
				<div style="text-align:center;color:black;padding-left:65px;color:#96232D">
					<h5>
						<i>
							<b>Votre argument de vente !!!<span style="padding-left:20px;">"L'informatique c'est pas vôtre problème c'est notre métier"</span>
							</b>
						</i>
					</h5>
				</div>
			</div>

			<div>
				{% if is_granted('ROLE_ADMIN')%}
					<a class="btn btn-outline-dark" href="{{path('app_register')}}">Créer Utilisateur
					</a>
				{% endif %}
				{% if app.user %}
					<a class="btn btn-outline-dark" href="{{path('app_logout')}}">Déconnexion</a>
				{% else %}
					<a class="btn btn-outline-dark" href="{{path('app_login')}}">Se connecter</a>
				{% endif %}
			</div>
		</div>
	</nav>
	<body>
		{% for message in app.flashes('Réussit') %}
			<div style="color:green;">{{message}}</div>
		{% endfor %}
	</body>
{% endblock %}
