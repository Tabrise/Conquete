{% extends 'base.html.twig' %}

{% block title %}Mon Prospect
{% endblock %}

{% block body%}
	<div class="card text-center">
		<div class="card-header">
			<h1>
				Mon Prospect:
				{{prospect.nom}}
			</h1>
			<div class="d-flex text-start justify-content-between">
				<div style="margin-right:25;">
					<p>
						<b>Adresse :
						</b>
						{{prospect.adresse}}</p>
					<p>
						<b>Code Postal :
						</b>
						{{prospect.codePostal}}</p>
					<p>
						<b>Ville :
						</b>
						{{prospect.ville}}</p>
					<p>
						<b>Sirtet :
						</b>
						{{prospect.siret}}</p>
				</div>
				<div style="margin-right:25;">
					<p>
						<b>Num° Standard :
						</b>
						{{prospect.numStandard}}</p>
					<p>
						<b>Email Standard :
						</b>
						{{prospect.emailStandard}}</p>
					<p>
						<b>Commentaire :
						</b>
						{{prospect.commentaire}}</p>
				</div>

				<div style="margin-right:25;">
					<p>
						<b>Nom Prénom :
						</b>
						{{contacts|first.nom}}
						{{contacts|first.Prenom}}</p>
					<p>
						<b>Poste :
						</b>
						{{contacts|first.poste}}</p>
					<p>
						<b>Num° Contact :
						</b>
						{{contacts|first.tel}}</p>
					<p>
						<b>Email Contact :
						</b>
						{{contacts|first.email}}</p>
				</div>
			</div>
			<ul class="nav nav-pills">
				<li class="nav-item">
					<a class="btn btn-outline-success btn-lg active" style="margin-right:5px;" data-bs-toggle="tab" href="#contact">
						<i class="bi bi-person-lines-fill"></i>
						Contact</a>
				</li>
				<li class="nav-item">
					<a class="btn btn-outline-primary btn-lg" style="margin-right:5px;" data-bs-toggle="tab" href="#audit">Audit</a>
				</li>
				<li class="nav-item">
					<a class="btn btn-outline-info btn-lg " style="margin-right:5px;" data-bs-toggle="tab" href="#">Offres</a>
				</li>
			</ul>
		</div>
		<div class="card-body">
			<div class="tab-content">
				<div class="tab-pane fade show active" id="contact">
					<p class="card-text">{{include('contact/index.html.twig')}}</p>
				</div>
				<div class="tab-pane fade" id="audit">
					<p class="card-text">{{include('audit/new.html.twig')}}</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
