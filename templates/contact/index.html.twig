{% block body %}
	<table class="table table-hover">
		<thead class="table-light">
			<tr>
				<th scope="col">Nom</th>
				<th scope="col">Prenom</th>
				<th scope="col">Poste</th>
				<th scope="col">Email</th>
				<th scope="col">Tel</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
			{% for contact in contacts %}
				<tr>
					<td>{{contact.nom}}</td>
					<td>{{contact.prenom}}</td>
					<td>{{contact.poste}}</td>
					<td>{{contact.email}}</td>
					<td>{{contact.tel}}</td>
					<td>
						<a class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modification{{contact}}">
							<i class="bi bi-person-fill-gear"></i>
							Contacts</a>
					</td>
				</tr>
				{{render(path('app_modifier_contact',{c:contact}))}}
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-success" data-bs-toggle="modal" data-bs-target="#ajout">
		<i class="bi bi-person-plus"></i>
		Contacts</a>
				{{render(path('app_ajout_contact',{s:prospect}))}}
{% endblock %}
